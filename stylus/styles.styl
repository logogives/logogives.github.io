//- IMPORTS / VARIABLES
@import '_reset'

cMain     = #9013FE
cText     = #626262
cTextDark = #252525
cLightBG = #F5E9FF

//- BASIC
*
    box-sizing: border-box

body
    font-family: 'Fira Sans', 'Helvetica', 'Arial', sans-serif
    font-size: 100%
    font-weight: 300
    -webkit-font-smoothing: antialiased

h1,h2,h3,h4,h5,h6
    font-weight: 300
    text-align: left

a,a:visited
    color: cMain
    position: relative

em
    font-style: italic

.clear
    clear: both
    display: block


//- CONTAINERS
.one-page-container
    display: block
    margin: 0 auto
    max-width: 960px
    width: 100%

.extra-padding-container
    padding: 40px 40px 0 40px
    width: 100%


//- HEADING CONTENT
h2
    color: cTextDark
    font-size: 18px
    line-height: 28px
    margin: 40px 0 0
    text-align: left

    img
        height: 28px
        vertical-align: top

h3
    color: cTextDark
    font-size: 45px
    line-height: 65px
    margin: 100px 0

    span
        background: cLightBG
        border-radius: 5px
        color: cTextDark
        line-height: 50px
        padding: 2px 10px

.break-it-up
    height: 150px
    width: 100%


//- LOGO ITEMS
a.logo-item-link
    border: 4px solid black
    display: inline-block
    height: 200px
    margin: 10px
    opacity: .5
    padding: 40px
    position: relative
    transition: all .3s ease
    width: calc(33.33% - 23px)

    &:hover
        opacity: 1

img.logo-item
    display: block
    height: 100%
    margin: 0
    transition: .3s ease all
    width:100%


//- BOTTOM BANNER
.bottom-banner
    background: cLightBG
    border-radius: 5px
    box-shadow: 0 1px 2px 0 rgba(0,0,0,.07)
    display: block
    margin: 100px auto
    padding: 50px
    text-align: center
    width: 100%

    h4
        color: cTextDark
        font-size: 45px
        line-height: 65px
        margin-bottom: 50px
        text-align: center

    .contact-button
        background: cMain
        border-radius: 100px
        color: white
        display: inline-block
        font-size: 20px
        font-weight: 700
        letter-spacing: 1px
        margin: 0 auto
        padding: 25px 45px
        text-decoration: none
        top: 0
        transition: all .3s ease

        &:hover
            box-shadow: 0 10px 40px 0 rgba(0,0,0,0.3)
            top: -5px


//- FOOTER
footer
    border-top: 1px solid #ccc
    padding: 40px
    width: 100%

    p
        color: cText
        font-size: 14px
        line-height: 25px
        text-align: center


//- MEDIA QUERIES
@media(max-width:800px)

    //- CONTAINERS
    .extra-padding-container
        padding: 20px 20px 0 20px

    //- LOGO ITEMS
    a.logo-item-link
        display: inline-block
        width: calc(50% - 23px)

@media(max-width:570px)

    h3
        font-size: 24px
        line-height: 34px

    //- LOGO ITEMS
    a.logo-item-link
        display: block
        margin: 0 0 20px 0
        width: 100%

    .bottom-banner
        h4
            font-size: 24px
            line-height: 34px

        .contact-button
            padding: 25px
